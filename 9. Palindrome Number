class Solution {
    public boolean isPalindrome(int x) {
        if(x < 0) {
            return false;
        }
        //long long data type for the reversed variable to handle potential overflow in case of large input numbers.
        long reversed = 0;
        long temp = x;
        while(temp != 0 ) {
            int digit = (int)(temp % 10);
            reversed = reversed * 10 + digit;
            temp = temp/10;
        }
        return (reversed == x);
    }
}
